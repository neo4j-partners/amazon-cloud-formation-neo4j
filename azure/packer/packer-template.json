{
  "variables": {
    "client_id": "07171ab8-105e-4305-87e8-075a9b852b7b",
    "client_secret": "{{env `AZURE_SP_PASSWORD`}}",
    "tenant_id": "54e85725-ed2a-49a4-a19e-11c8d29f9a0f",
    "subscription_id": "e4486a99-00d6-4e46-aab0-b087f918eda9",
    "object_id": "8e7b95b8-01f5-469a-98cc-60caf9aecb9d",
    "neo4j_version": "1:3.5.1",
    "neo4j_edition": "enterprise",

    "apoc_jar": "https://github.com/neo4j-contrib/neo4j-apoc-procedures/releases/download/3.5.0.1/apoc-3.5.0.1-all.jar",
    "graphalgos_jar": "https://github.com/neo4j-contrib/neo4j-graph-algorithms/releases/download/3.5.0.1/graph-algorithms-algo-3.5.0.1.jar"
  },
  "builders": [
    {
      "type": "azure-arm",
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "subscription_id": "{{user `subscription_id`}}",
      "tenant_id": "{{user `tenant_id`}}",

      "capture_container_name": "publicvhds",
      "capture_name_prefix": "neo4j-{{user `neo4j_edition`}}-{{user `neo4j_version` | clean_image_name}}",
      "resource_group_name": "neo4j-public",
      "storage_account": "neo4jpublicstorage",
      "build_resource_group_name": "neo4j-public",

      "vm_size": "Standard_A2",

      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "16.04-LTS",
  
      "ssh_username": "ubuntu",

      "azure_tags": {
        "neo4j-install-date": "{{isotime \"2006-01-02T03:04:05Z\"}}",
        "neo4j-version": "{{user `neo4j_version`}}",
        "neo4j-edition": "{{user `neo4j_edition`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./neo4j.conf",
      "destination": "/home/ubuntu/neo4j.conf"
    },
    {
      "type": "file",
      "source": "./neo4j-community.conf",
      "destination": "/home/ubuntu/neo4j-community.conf"
    },
    {
      "type": "file",
      "source": "./pre-neo4j.sh",
      "destination": "/home/ubuntu/pre-neo4j.sh"
    },
    {
      "type": "file",
      "source": "../../licensing",
      "destination": "/home/ubuntu"
    },
    {
      "type": "shell",
      "script": "./install-neo4j.sh",
      "environment_vars": [
        "neo4j_version={{ user `neo4j_version` }}",
        "neo4j_edition={{ user `neo4j_edition` }}",
        "apoc_jar={{ user `apoc_jar` }}",
        "graphalgos_jar={{ user `graphalgos_jar` }}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -f /home/ubuntu/.ssh/authorized_keys",
        "sudo rm -f /root/.ssh/authorized_keys",
        "sudo rm -f /home/ubuntu/*.conf"
      ]
    }
  ]
}