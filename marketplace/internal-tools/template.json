{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "neo4j_version": "4.4.8",
    "region": "us-east-1",
    "instance_type": "t2.micro",
    "destination_regions": "us-east-1",
    "base_owner": "385155106615"
  },
  "builders": [
    {
      "name": "Neo4j",
      "ami_description": "Neo4j-{{user `neo4j_version` | clean_resource_name}}-AMI",
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "force_deregister": true,
      "security_group_id": "{{user `security_group_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "*amzn2-ami-hvm-*",
          "root-device-type": "ebs"
        },
        "owners": "137112412989",
        "most_recent": true
      },
      "instance_type": "{{ user `instance_type` }}",
      "ssh_username": "ec2-user",
      "ami_name": "Neo4j-{{user `neo4j_version` | clean_resource_name}}-Marketplace-Image-Public-Amzn-Linux",
      "ami_regions": "{{user `destination_regions`}}",
      "ami_groups": [
        "all"
      ],
      "tags": {
        "ami-creation-date": "{{isotime \"2006-01-02T03:04:05Z\"}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo rm -f ~/.ssh/authorized_keys",
        "sudo rm -f /root/.ssh/authorized_keys",
        "rpm --import https://debian.neo4j.com/neotechnology.gpg.key",
        "echo  [neo4j] > /etc/yum.repos.d/neo4j.repo",
        "echo  name=Neo4j Yum Repo >> /etc/yum.repos.d/neo4j.repo",
        "echo  baseurl=http://yum.neo4j.com/stable >> /etc/yum.repos.d/neo4j.repo",
        "echo  enabled=1 >> /etc/yum.repos.d/neo4j.repo",
        "echo  gpgcheck=1 >> /etc/yum.repos.d/neo4j.repo",
        "yum install --downloadonly neo4j-enterprise"
      ]
    }
  ]
}